  title = {Unusual magnetic properties of the polar orthorhombic BiFe<sub>0.5</sub>Sc<sub>0.5</sub>O<sub>3</sub> perovskite},
  journal = {Journal of Magnetism and Magnetic Materials},
  year = {2018},
